<api xmlns="http://ws.apache.org/ns/synapse" name="ForEachPI" context="/foreach">
    <resource methods="POST" uri-template="/json-body-replace-1">
        <inSequence>
            <foreach collection="${payload.data.list}" parallel-execution="true">
                <sequence>
                    <variable name="status" expression="${payload.type == 'fruit' ? true : false}"/>
                    <payloadFactory media-type="json">
                        <format><![CDATA[{
                            "_name": ${payload.name},
                            "age": 5,
                            "status": ${var.status}
                            }]]>
                        </format>
                    </payloadFactory>
                </sequence>
            </foreach>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="POST" uri-template="/json-body-replace-2">
        <inSequence>
            <foreach collection="${payload.data.list}" parallel-execution="true">
                <sequence>
                    <call>
                        <endpoint>
                            <http method="post" uri-template="http://localhost:8480/foreach/transform-json"/>
                        </endpoint>
                    </call>
                </sequence>
            </foreach>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="POST" uri-template="/json-body-variable-output">
        <inSequence>
            <foreach collection="${payload.data.list}" result-target="result" result-type="JSON"
                     parallel-execution="false">
                <sequence>
                    <payloadFactory media-type="json">
                        <format><![CDATA[{
                            "_name": ${payload.name},
                            "age": 5
                            }]]>
                        </format>
                    </payloadFactory>
                </sequence>
            </foreach>
            <payloadFactory media-type="json">
                <format><![CDATA[{
                            "foreachResult": ${var.result}
                            }]]>
                </format>
            </payloadFactory>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="GET" uri-template="/json-var-replace">
        <inSequence>
            <variable name="list" type="JSON"
                      value="[{&quot;name&quot;: &quot;guava&quot;,&quot;type&quot;: &quot;fruit&quot;},{&quot;name&quot;: &quot;beet&quot;,&quot;type&quot;: &quot;vegetable&quot;}]"/>
            <foreach collection="${var.list}" parallel-execution="false">
                <sequence>
                    <payloadFactory media-type="json">
                        <format><![CDATA[{
                            "_name": ${payload.name},
                            "age": 5
                            }]]>
                        </format>
                    </payloadFactory>
                </sequence>
            </foreach>
            <log category="INFO">
                <message>Processed message : ${var.list}</message>
            </log>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="POST" uri-template="/json-var-variable-output">
        <inSequence>
            <variable name="var_1" type="JSON"
                      value="{&quot;data&quot;: {&quot;list&quot;: [{&quot;name&quot;: &quot;apple&quot;,&quot;type&quot;: &quot;fruit&quot;},{&quot;name&quot;: &quot;carrot&quot;,&quot;type&quot;: &quot;vegetable&quot;}]}}"/>
            <foreach version="v2" collection="${var.var_1.data.list}" result-target="result" result-type="JSON"
                     parallel-execution="true">
                <sequence>
                    <payloadFactory media-type="json">
                        <format><![CDATA[{
                            "_name": ${payload.name},
                            "age": 5
                            }]]>
                        </format>
                    </payloadFactory>
                </sequence>
            </foreach>
            <log category="INFO">
                <message>Original list : ${var.var_1}</message>
            </log>
            <log category="INFO">
                <message>Foreach output : ${var.result}</message>
            </log>
            <log category="INFO">
                <message>Request Body : ${payload}</message>
            </log>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="POST" uri-template="/xml-body-replace">
        <inSequence>
            <foreach collection="${xpath('//data/list')}" parallel-execution="false">
                <sequence>
                    <log category="INFO">
                        <message>Processing message : ${xpath('/')}</message>
                    </log>
                    <payloadFactory media-type="xml">
                        <format>
                            <person xmlns="">
                                <surname>${xpath('//list/name/text()')}</surname>
                                <age>10</age>
                            </person>
                        </format>
                    </payloadFactory>
                </sequence>
            </foreach>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="POST" uri-template="/xml-body-variable-output">
        <inSequence>
            <foreach collection="${xpath('//data/list')}" result-target="foreach_result" result-type="XML" parallel-execution="false">
                <sequence>
                    <log category="INFO">
                        <message>Processing message : ${xpath('/')}</message>
                    </log>
                    <call>
                        <endpoint>
                            <http method="post" uri-template="http://localhost:8480/foreach/transform-xml"/>
                        </endpoint>
                    </call>
                </sequence>
            </foreach>
            <log category="INFO">
                <message>Processed message body : ${xpath('/')}</message>
            </log>
            <log category="INFO">
                <message>Processed result : ${var.foreach_result}</message>
            </log>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="POST" uri-template="/xml-var-variable-output">
        <inSequence>
            <variable name="xml_collection" expression="${xpath('//data')}" type="OM"/>
            <foreach collection="${xpath('//list', 'xml_collection')}" parallel-execution="false" result-target="foreach_result" result-type="XML">
                <sequence>
                    <call>
                        <endpoint>
                            <http method="post" uri-template="http://localhost:8480/foreach/transform-xml"/>
                        </endpoint>
                    </call>
                </sequence>
            </foreach>
            <log category="INFO">
                <message>Original collection : ${var.xml_collection}</message>
            </log>
            <log category="INFO">
                <message>Processed collection : ${var.foreach_result}</message>
            </log>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="POST GET" uri-template="/transform-json">
        <inSequence>
            <variable name="status" expression="${payload.type == 'fruit' ? true : false}"/>
            <payloadFactory media-type="json">
                <format><![CDATA[{
                            "_name": ${payload.name},
                            "age": 5,
                            "status": ${var.status}
                            }]]>
                </format>
            </payloadFactory>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="POST GET" uri-template="/transform-xml">
        <inSequence>
            <payloadFactory media-type="xml">
                <format>
                    <person xmlns="">
                        <surname>${xpath('//list/name/text()')}</surname>
                        <age>2</age>
                    </person>
                </format>
            </payloadFactory>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
</api>
