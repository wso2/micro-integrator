                        </endpoint>
                    </call>
                </sequence>
            </scatter-gather>
            <log>
                <message>Scatter Gather output = ${var.output_var}</message>
            </log>
            <respond/>
        </inSequence>
    </resource>
    <resource methods="POST" uri-template="/xml-body-replace">
        <inSequence>
            <!-- <variable name="result" expression="${xpath('//result/pet')}" type="OM"/> -->
            <scatter-gather parallel-execution="true" result-target="body" root-element="scatter_response"
                            content-type="XML">
                <aggregation expression="${xpath('$body/node()')}"/>
                <sequence>
                    <payloadFactory media-type="xml" template-type="default">
                        <format>
                            <pet xmlns="">
                                <name>pet1</name>
                                <type>cat</type>
                                <requestId>${xpath('//requestId')}</requestId>
                            </pet>
                        </format>
                        <args>
                        </args>
                    </payloadFactory>
                </sequence>
                <sequence>
                    <call>
                        <endpoint>
                            <http method="post" uri-template="http://localhost:8480/scatter-gather/mock-backend-xml"/>
                        </endpoint>
                    </call>
                </sequence>
            </scatter-gather>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
