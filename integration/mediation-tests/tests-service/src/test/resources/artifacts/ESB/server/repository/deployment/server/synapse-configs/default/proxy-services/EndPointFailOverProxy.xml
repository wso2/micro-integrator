<proxy xmlns="http://ws.apache.org/ns/synapse" name="EndPointFailOverProxy" transports="https http" startOnLoad="true" trace="disable">
    <description/>
    <target>
        <inSequence>
            <send>
                <endpoint>
                    <failover>
                        <endpoint>
                            <property name="FORCE_ERROR_ON_SOAP_FAULT" value="true"/>

                            <address uri="http://localhost:9001/services/SimpleStockQuoteService">
                                <enableAddressing/>
                                <suspendDurationOnFailure>60</suspendDurationOnFailure>
                            </address>
                        </endpoint>
                        <endpoint>
                            <address uri="http://localhost:9002/services/SimpleStockQuoteService">
                                <enableAddressing/>
                                <suspendDurationOnFailure>60</suspendDurationOnFailure>
                            </address>
                        </endpoint>

                    </failover>
                </endpoint>
            </send>
            <drop/>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
    </target>
</proxy>
